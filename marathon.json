{
  "id": "/sys/registry",
  "apps": [
    {
      "id": "external",
      "instances": 1,
      "cpus": 1,
      "mem": 1024,
      "disk": 0,
      "requirePorts": true,
      "backoffSeconds": 1,
      "backoffFactor": 1.15,
      "maxLaunchDelaySeconds": 3600,
      "labels": {
        "owner": "sys"
      },
      "container": {
        "type": "DOCKER",
        "docker": {
          "image": "h0tbird/registry:v2.2.1-3",
          "network": "BRIDGE",
          "portMappings": [
            { "containerPort": 5000, "hostPort": 0 }
          ],
          "privileged": false,
          "parameters": [
            { "key": "env", "value": "REGISTRY_HTTP_DEBUG_ADDR=localhost:5001" },
            { "key": "env", "value": "REGISTRY_STORAGE_RADOS_POOLNAME=registry-ext" },
            { "key": "env", "value": "REGISTRY_PROXY_REMOTEURL=https://registry-1.docker.io" },
            { "key": "volume", "value": "/etc/ceph:/etc/ceph" }
          ],
          "forcePullImage": true
        }
      },
      "healthChecks": [
        {
          "gracePeriodSeconds": 120,
          "intervalSeconds": 30,
          "maxConsecutiveFailures": 3,
          "portIndex": 0,
          "protocol": "TCP",
          "timeoutSeconds": 5
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 1
      }
    },
    {
      "id": "internal",
      "instances": 1,
      "cpus": 1,
      "mem": 1024,
      "disk": 0,
      "requirePorts": true,
      "backoffSeconds": 1,
      "backoffFactor": 1.15,
      "maxLaunchDelaySeconds": 3600,
      "labels": {
        "owner": "sys"
      },
      "container": {
        "type": "DOCKER",
        "docker": {
          "image": "h0tbird/registry:v2.2.1-3",
          "network": "BRIDGE",
          "portMappings": [
            { "containerPort": 5000, "hostPort": 0 }
          ],
          "privileged": false,
          "parameters": [
            { "key": "env", "value": "REGISTRY_HTTP_DEBUG_ADDR=localhost:5001" },
            { "key": "env", "value": "REGISTRY_STORAGE_RADOS_POOLNAME=registry-int" },
            { "key": "env", "value": "ENDPOINT_NAME=portus" },
            { "key": "env", "value": "ENDPOINT_URL=http://web-portus-sys.marathon/v2/webhooks/events" },
            { "key": "env", "value": "ENDPOINT_TIMEOUT=500" },
            { "key": "env", "value": "ENDPOINT_THRESHOLD=5" },
            { "key": "env", "value": "ENDPOINT_BACKOFF=1" },
            { "key": "volume", "value": "/etc/ceph:/etc/ceph" }
          ],
          "forcePullImage": true
        }
      },
      "healthChecks": [
        {
          "gracePeriodSeconds": 120,
          "intervalSeconds": 30,
          "maxConsecutiveFailures": 3,
          "portIndex": 0,
          "protocol": "TCP",
          "timeoutSeconds": 5
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 1
      }
    }
  ]
}
